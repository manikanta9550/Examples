import java.util.Scanner;
public class Sum {
    public static void main(String[] args){

        Scanner scanner = new Scanner(System.in);
        System.out.print("Enter the number: ");
        int num = scanner.nextInt();
        scanner.close();

        int result = 1;
        int sum = 1;

        for(int i = 1; i<num;i++){
            sum+=i;
            result+=sum;
        }
        System.out.println(result);

    }
    
}
